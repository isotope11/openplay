#!/usr/bin/env ruby
require 'thor'
require './lib/openplay/client'
require './lib/openplay/server'

module Openplay
  class CLI < Thor
    desc "throw", "Throw video"
    def throw(receiver)
      puts "I'm throwing to #{receiver}"
      @client = ::Openplay::Client.new(receiver)
      @client.throw
    end

    desc "receive", "Receive video"
    def receive
      puts "I'm receiving."
      @server = ::Openplay::Server.new
      @server.receive
    end
  end
end

Openplay::CLI.start
